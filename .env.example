# Database credentials (used by docker-compose)
POSTGRES_USER=agent_store_user
POSTGRES_PASSWORD=change_me
POSTGRES_DB=agent_store

# Database connection URL
# For Docker Compose: use the service name 'postgres'
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
# For local development: use localhost
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# Temporal configuration
TEMPORAL_ADDRESS=temporal:7233
# Temporal database (used by docker-compose Temporal service)
TEMPORAL_DB_USER=temporal
TEMPORAL_DB_PASSWORD=change_temporal
TEMPORAL_DB_NAME=temporal
TEMPORAL_DB_HOST=temporal-postgres
TEMPORAL_DB_PORT=5432
# For local development:
# TEMPORAL_ADDRESS=localhost:7233

# API configuration
PORT=3000
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# WandB configuration (optional)
WANDB_DISABLED=false
WANDB_PROJECT=agent-store-sandbox
WANDB_ENTITY=local
WANDB_BASE_URL=https://wandb.ai
# WANDB_API_KEY=your-wandb-api-key-here

# LLM API Keys (for Judge Panel stage)
# Uncomment and set your API keys to enable LLM-based judging
# OPENAI_API_KEY=sk-your-openai-key-here
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# OPENAI_BASE_URL=https://api.openai.com/v1

# Signature verification (set to true to skip verification in dev/test mode)
SKIP_SIGNATURE_VERIFICATION=true

# Next.js Review UI
NEXT_PUBLIC_API_URL=http://localhost:3000
