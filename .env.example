# Database connection URL
# For Docker Compose: use the service name 'postgres'
DATABASE_URL=postgresql://agent_store_user:agent_store_pass@postgres:5432/agent_store
# For local development: use localhost
# DATABASE_URL=postgresql://agent_store_user:agent_store_pass@localhost:5432/agent_store

# Temporal configuration
TEMPORAL_ADDRESS=temporal:7233
# For local development:
# TEMPORAL_ADDRESS=localhost:7233

# API configuration
PORT=3000
NODE_ENV=production

# WandB configuration (optional)
WANDB_DISABLED=false
WANDB_PROJECT=agent-store-sandbox
WANDB_ENTITY=local
WANDB_BASE_URL=https://wandb.ai

# Next.js Review UI
NEXT_PUBLIC_API_URL=http://localhost:3000
